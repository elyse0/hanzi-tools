{
  "name": "@elyse0/hanzi-tools",
  "version": "1.0.6",
  "author": "elyse0",
  "description": "Chinese conversion utils (pinyin, simplification and segmentation). Fork of @peterolson/hanzi-tools",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:elyse0/hanzi-tools.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "deploy-minor-version": "npm version minor --force -m \"Deploy new minor version\"",
    "deploy-patch-version": "npm version patch --force -m \"Deploy new patch\""
  },
  "license": "MIT",
  "keywords": [
    "pinyin",
    "chinese",
    "simplified",
    "traditional",
    "convertion",
    "segmentation",
    "chinese-pinyin"
  ],
  "dependencies": {
    "nodejieba": "^2.5.2",
    "pinyin": "^2.10.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/pinyin": "^2.10.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
